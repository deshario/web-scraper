{
  "name": "scrapper-server",
  "version": "1.0.0",
  "license": "MIT",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write ./src",
    "test": "jest --coverage",
    "pre-commit": "npx lint-staged",
    "migrate": "sequelize db:migrate",
    "create-migration": "sequelize migration:generate --name",
    "undo-migration": "sequelize db:migrate:undo:all"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "sequelize-cli": "^6.6.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "yarn format"
    ]
  }
}
